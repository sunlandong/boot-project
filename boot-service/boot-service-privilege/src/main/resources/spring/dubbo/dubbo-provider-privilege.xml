<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:dubbo="http://code.alibabatech.com/schema/dubbo"
	xsi:schemaLocation="http://www.springframework.org/schema/beans        
						http://www.springframework.org/schema/beans/spring-beans.xsd        
						http://code.alibabatech.com/schema/dubbo        
						http://code.alibabatech.com/schema/dubbo/dubbo.xsd">

	<dubbo:application name="boot-privilege" />
	<dubbo:registry address="zookeeper://localhost:2181" />
	<!-- <dubbo:registry address="zookeeper://10.238.18.82:2181" /> -->
	<dubbo:protocol name="dubbo" port="20886" />
	<dubbo:provider timeout="100000" retries="0"/>
	
	<!-- <context:property-placeholder
		ignore-resource-not-found="true"
		location="classpath*:/jdbc.test.properties" /> -->
	
	<!-- 指定注入到Service中的Mapper接口的位置 -->
	<!-- <bean class="org.mybatis.spring.mapper.MapperScannerConfigurer" > -->
          <!-- <property name="basePackage" value="org.zbt.service.jxc.dao"/> -->
          <!-- <property name="annotationClass" value="org.apache.ibatis.annotations.Mapper"/> -->
    <!-- </bean> -->
	<!-- 实例化服务层以及dubbo通过接口发布服务 -->
	<bean id="roleService" class="org.boot.service.privilege.impl.RoleServiceImpl"/>
	<dubbo:service interface="org.boot.facede.privilege.service.RoleService" ref="roleService"/>
	
	<bean id="menuService" class="org.boot.service.privilege.impl.MenuServiceImpl"/>
	<dubbo:service interface="org.boot.facede.privilege.service.MenuService" ref="menuService"/>
	
	<bean id="roleButtonService" class="org.boot.service.privilege.impl.RoleButtonServiceImpl"/>
	<dubbo:service interface="org.boot.facede.privilege.service.RoleButtonService" ref="roleButtonService"/>
	
	<bean id="buttonService" class="org.boot.service.privilege.impl.ButtonServiceImpl"/>
	<dubbo:service interface="org.boot.facede.privilege.service.ButtonService" ref="buttonService"/>
</beans>